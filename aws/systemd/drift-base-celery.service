[Unit]
Description=Drift Base Celery App
After=syslog.target

[Service]
Type=simple
EnvironmentFile=/etc/environment
ExecStart=/usr/local/bin/celery worker -A drift.celeryboot.celery -B -l info --logfile=/var/log/celery/celery.log
Restart=on-failure
RestartSec=5
KillSignal=SIGQUIT
User=ubuntu

[Install]
WantedBy=multiuser.target
